<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:background="@drawable/bg_charge"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRechargeSetMeaName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/calibri"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textColor="@color/color_E0AA79"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="NestedWeights,RtlSymmetry" />

        <TextView
            android:id="@+id/tvRechargeSetMeaAmount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingEnd="@dimen/dp_10"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_5"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_10"
            android:text="@string/bonus_vip"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/tvRechargeSetMeaNameVIP"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/calibri"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                tools:ignore="NestedWeights,RtlSymmetry" />

            <TextView
                android:id="@+id/tvRechargeSetMeaAmountVIP"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:paddingEnd="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEffectiveDaysVIP"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                tools:ignore="NestedWeights,RtlSymmetry" />

            <TextView
                android:id="@+id/tvRechargeSetMeaNumVIP"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:paddingEnd="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                tools:ignore="RtlHardcoded,RtlSymmetry" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
