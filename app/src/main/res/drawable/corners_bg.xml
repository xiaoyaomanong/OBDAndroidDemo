<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/gray" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!--这个是按钮边框设置为四周 并且宽度为1-->
    <item
        android:right="6dp"
        android:left="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape>
            <!--这个是背景颜色-->
            <solid android:color="@color/gray" />
            <corners android:radius="8dp" />
            <!--这个是按钮中的字体与按钮内的四周边距-->
            <padding android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</layer-list>