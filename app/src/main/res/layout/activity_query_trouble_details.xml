<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_080707"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/titleBarSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barStyle="night"
        app:lineVisible="false"
        app:title="@string/troubleCode" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_black"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFaultCode"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@null"
                android:gravity="center"
                android:fontFamily="@font/calibri"
                android:hint="@string/text_troubleCode"
                android:textColor="@color/white"
                android:textColorHint="@color/textInputLayout"
                android:textSize="@dimen/sp_16"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gotham"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:text="@string/BelongingSystem"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tvBelongingSystem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="@string/BelongingSystem"
                    android:textColor="@color/white"
                    android:textColorHint="@color/textInputLayout"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gotham"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:text="@string/scopeOfApplication"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tvScopeOfApplication"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="@string/scopeOfApplication"
                    android:textColor="@color/white"
                    android:textColorHint="@color/textInputLayout"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gotham"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:text="@string/chineseMeaning"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tvChineseMeaning"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="@string/chineseMeaning"
                    android:textColor="@color/white"
                    android:textColorHint="@color/textInputLayout"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gotham"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:text="@string/englishMeaning"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tvEnglishMeaning"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="@string/englishMeaning"
                    android:textColor="@color/white"
                    android:textColorHint="@color/textInputLayout"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:fontFamily="@font/gotham"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:text="@string/causeOfFailure"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/tvCauseOfFailure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="@string/causeOfFailure"
                    android:padding="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:textColorHint="@color/textInputLayout"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>