<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_080707"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backButton="false"
        app:barStyle="ripple"
        app:leftColor="@color/white"
        app:rightColor="#0033FF"
        app:rightIcon="@drawable/action_connect"
        app:rightSize="18sp"
        app:title="汽车扫描器"
        app:titleSize="17sp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessLeaf">

            <LinearLayout
                android:id="@+id/layoutAddCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_black"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/icon_car"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/calibri"
                        android:gravity="center_vertical"
                        android:text="@string/select_add_car"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/icon_next"
                        android:tint="@color/gray"
                        tools:ignore="ContentDescription" />
                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleCar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_black"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivCarLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@null"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAutomobileBrandName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:ignore="NestedWeights,RtlSymmetry" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/black_line" />

                    <TextView
                        android:id="@+id/tvModelName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:textColor="@color/gray_light"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/icon_next"
                    android:tint="@color/gray"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutOBD"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_black"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">


                <TextView
                    android:id="@+id/tv_obd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gotham"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:ignore="NestedWeights,RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_home_obd_tip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/gotham"
                    android:gravity="center_vertical|right"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="RtlHardcoded" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/icon_next"
                    android:tint="@color/gray"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_black"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutMoreDash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/icon_dash"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:text="@string/dash"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/calibri"
                        android:gravity="center_vertical|right"
                        android:paddingStart="10dp"
                        android:text="@string/home_more_dash"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_14"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/icon_next"
                        android:tint="@color/gray"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.example.obdandroid.ui.view.dashView.CustomerDashboardViewLight
                        android:id="@+id/dashSpeed"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            tools:ignore="NestedWeights">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/calibri"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_10"
                                android:text="@string/CurrentSpeed"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12" />

                            <com.example.obdandroid.ui.view.PhilText
                                android:id="@+id/tvCurrentSpeed"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/calibri"
                                android:gravity="center"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/calibri"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/speed_unit"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/gray_light"
                            tools:ignore="Suspicious0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/calibri"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_10"
                                android:text="@string/MaxSpeed"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12"
                                tools:ignore="NestedWeights" />

                            <com.example.obdandroid.ui.view.PhilText
                                android:id="@+id/tvMaxSpeed"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/calibri"
                                android:gravity="center"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/calibri"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/speed_unit"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/gray_light"
                            tools:ignore="Suspicious0dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:fontFamily="@font/calibri"
                                android:gravity="center"
                                android:paddingTop="@dimen/dp_10"
                                android:paddingBottom="@dimen/dp_10"
                                android:text="@string/AverageSpeed"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12"
                                tools:ignore="NestedWeights" />

                            <com.example.obdandroid.ui.view.PhilText
                                android:id="@+id/tvAverageSpeed"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/calibri"
                                android:gravity="center"
                                android:textColor="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/calibri"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="@string/speed_unit"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_black"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutMoreTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10"
                        android:src="@drawable/icon_car_check"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/calibri"
                        android:gravity="center_vertical"
                        android:text="@string/car_check_record"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/icon_next"
                        android:tint="@color/gray"
                        tools:ignore="ContentDescription" />
                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:scrollbars="none" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>