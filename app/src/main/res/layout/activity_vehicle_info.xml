<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_080707"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/titleBarSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barStyle="night"
        app:lineVisible="false"
        app:title="车辆信息" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_black"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.example.obdandroid.ui.view.CircleImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_bm" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvAutomobileBrandName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:text="宝马"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:ignore="NestedWeights,RtlSymmetry" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@color/black_line" />

                    <TextView
                        android:id="@+id/tvModelName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="15dp"
                        android:textColor="@color/gray_light"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_next"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBind"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_black"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_obd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gotham"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:text="OBD 未绑定"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:ignore="NestedWeights,RtlSymmetry" />

                <TextView
                    android:id="@+id/tv_home_obd_tip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/icon_no"
                    android:fontFamily="@font/gotham"
                    android:gravity="center_vertical|right"
                    android:hint="设备序列号"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/gray_light"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/sp_12"
                    tools:ignore="RtlHardcoded" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_next"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_black"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/fuelType"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvFuelType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/transmissionType"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvTransmissionType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/currentMileage"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvCurrentMileage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry,TextFields" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black_line" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_black"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/VehiclePurchaseDate"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvVehiclePurchaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/EngineNumber"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvEngineNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/LicensePlateNumber"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvLicensePlateNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_black"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/EngineDisplacement"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvEngineDisplacement"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/FuelCost"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvFuelCost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/GrossVehicleWeight"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvGrossVehicleWeight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/LastMaintenanceDate"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvLastMaintenanceDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:paddingEnd="10dp"
                        android:text="@string/LastMaintenanceMileage"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvLastMaintenanceMileage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingStart="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/MaintenanceInterval"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvMaintenanceInterval"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/MaintenanceMileageInterval"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvMaintenanceMileageInterval"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/TankCapacity"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry" />

                    <TextView
                        android:id="@+id/tvTankCapacity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black_line" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    tools:ignore="TooManyViews">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/YearManufacture"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlSymmetry,TooManyViews" />

                    <TextView
                        android:id="@+id/tvYearManufacture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:paddingEnd="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/black_line" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>